@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MainView.cshtml";
}

@foreach (var x in Model)
{
    <div class="col-lg-4 card">

        <a href="/Default/BlogDetails/@x.BlogID/">
            <img src="@x.BlogImage" style="height:180px; width: 300px;" class="card-img-top img-fluid" alt="">
        </a>

        <div class="card-body">
            <ul class="blog-icons my-4">
                <li>
                    <a href="#">
                        <i class="far fa-calendar-alt"></i> @(((DateTime)x.BlogCreateDate).ToString("dd-MMM-yyyy"))
                    </a>
                </li>
                <li class="mx-2">
                    <a href="#">
                        <i class="far fa-comment"></i> 21
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fas fa-eye"></i> @x.Category.CategoryName
                    </a>
                </li>

            </ul>
            <h5 class="card-title">
                <a href="/Default/BlogDetails/@x.BlogID/">@x.BlogTitle</a>
            </h5>
            <h6>@x.Writer.WriterName</h6>
            <p class="card-text mb-3">@x.BlogContent.Substring(0,x.BlogContent.Substring(0,110).LastIndexOf(" "))... </p>
            <a href="/Default/BlogDetails/@x.BlogID/" class="btn btn-primary read-m">Etrafli</a>
        </div>


    </div>
}

<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-left mt-4">
        <li class="page-item disabled">
            <a class="page-link" href="#" tabindex="-1">Previous</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">1</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">2</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">3</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">Next</a>
        </li>
    </ul>
</nav>